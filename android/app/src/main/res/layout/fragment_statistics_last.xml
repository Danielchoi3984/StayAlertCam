<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="16dp">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Ultimo Viaje"
            android:textColor="@color/black"
            android:textSize="28sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Tabla -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_table_bg"
            android:paddingHorizontal="15sp">

            <!-- Fila -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_table_bg"
                android:paddingVertical="28sp">

                <!-- Celda -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_duracion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="NUM"
                        android:textColor="@color/bottom_sheet_text_color"
                        android:textSize="28sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Horas\nmanejando"
                        android:textColor="@color/bottom_sheet_text_color"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Celda -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_alertas_fatiga"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="NUM"
                        android:textColor="@color/bottom_sheet_text_color"
                        android:textSize="28sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Alertas de\nFatiga"
                        android:textColor="@color/bottom_sheet_text_color"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Celda -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_alertas_somnolencia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="NUM"
                        android:textColor="@color/bottom_sheet_text_color"
                        android:textSize="28sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Alertas de\nSomnolencia"
                        android:textColor="@color/bottom_sheet_text_color"
                        android:textSize="16sp" />
                </LinearLayout>
            </TableRow>

            <!-- Fila Separadora -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1px"
                android:background="@color/bottom_sheet_text_color">
            </TableRow>

            <!-- Fila -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue_stayalert"
                android:paddingVertical="28sp">

                <!-- Celda -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_cantidad_descansos_totales"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="NUM"
                        android:textColor="@color/bottom_sheet_text_color"
                        android:textSize="28sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Paradas\nRealizadas"
                        android:textColor="@color/bottom_sheet_text_color"
                        android:textSize="16sp" />
                </LinearLayout>
            </TableRow>

            <!-- Fila Separadora -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1px"
                android:background="@color/bottom_sheet_text_color">
            </TableRow>

            <!-- Fila -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_table_bg"
                android:paddingVertical="28sp">

                <!-- Celda -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_minutos_totales_descanso"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="NUM"
                        android:textColor="@color/bottom_sheet_text_color"
                        android:textSize="28sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Minutos de\nDescanso"
                        android:textColor="@color/bottom_sheet_text_color"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Celda -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_minutos_promedio_por_descanso"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="NUM"
                        android:textColor="@color/bottom_sheet_text_color"
                        android:textSize="28sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Descanso\nPromedio"
                        android:textColor="@color/bottom_sheet_text_color"
                        android:textSize="16sp" />
                </LinearLayout>

            </TableRow>

        </TableLayout>

    </ScrollView>

</LinearLayout>



